page {
  background-color: #dfe7e7;
}
.swiper-box {
  height: 180px;
  width: 80%;
  margin: auto;
  overflow: hidden;
  border-radius: 10px;
  background-color: #eee;
}
.swiper-box .swiper {
  height: 100%;
}
.video {
  text-align: center;
  background-color: #fff;
}
.video .video_box {
  font-size: 20px;
  position: relative;
}
.video .video_box .play_icon {
  width: 80px;
  height: 80px;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -40px;
  margin-top: -40px;
}
.video .video_box .play_icon image {
  width: 100%;
  height: 100%;
}
